<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Light" parent="Holo.Theme.Light">
        <item name="actionBarStyle">@style/Theme.Light.ActionBar</item>
        <item name="spinnerDropDownItemStyle">@style/Theme.Light.ActionBar.SpinnerItem</item>
        <item name="spinnerItemStyle">@style/Theme.Light.ActionBar.DropDownSpinner</item>
        <item name="popupMenuStyle">@style/Theme.Light.ActionBar.Popup</item>
        <item name="actionMenuTextColor">@color/white_text_colour</item>
        <item name="itemTextAppearance">@style/Theme.Light.PopupMenuTextStyle</item>
    </style>

    <style name="Theme.Light.ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="titleTextStyle">@style/Theme.Light.ActionBar.TitleTextStyle</item>
        <item name="background">@color/blue_background_colour</item>
    </style>

    <style name="Theme.Light.ActionBar.TitleTextStyle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white_text_colour</item>
    </style>

    <style name="Theme.Light.ActionBar.DropDownSpinner" parent="@style/Widget.Sherlock.TextView.SpinnerItem">
        <item name="android:textColor">@color/white_text_colour</item>
    </style>

    <style name="Theme.Light.ActionBar.SpinnerItem" parent="@style/Widget.Sherlock.Light.DropDownItem.Spinner">
        <item name="background">@color/blue_background_colour</item>
        <item name="android:background">@color/blue_background_colour</item>
        <item name="android:textColor">@color/white_text_colour</item>
    </style>

    <style name="Theme.Light.ActionBar.Popup" parent="@style/Widget.Sherlock.ListPopupWindow">
        <item name="android:popupBackground">@color/blue_background_colour</item>
    </style>

    <style name="Theme.Light.PopupMenuTextStyle" parent="@android:style/TextAppearance.Widget.TextView.PopupMenu">
        <item name="android:textColor">@color/white_text_colour</item>
    </style>

</resources>